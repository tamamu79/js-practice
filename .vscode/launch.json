{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Docker: Attach to Node",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/index.js",
      "remoteRoot": "/app/index.js",
      "protocol": "inspector",
      "restart": true
    },
    // ローカルにあるファイルをデバッグ
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Node",
      "address": "localhost",
      "program": "${workspaceRoot}/index.js"
    },
  ]
}
